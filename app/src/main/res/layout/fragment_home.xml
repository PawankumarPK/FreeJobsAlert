<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.MainActivity">


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">


        <Button
                android:id="@+id/mWelcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="20dp"
                android:background="@drawable/color_button_gradient"
                android:text="Welcome"
                android:textAllCaps="false"
                android:textColor="#fff"/>


        <Button
                android:id="@+id/mHomePage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/mWelcome"
                android:background="@drawable/color_button_gradient"
                android:text="Home Page"
                android:textAllCaps="false"
                android:textColor="#fff"/>


        <Button
                android:id="@+id/mYoutube"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/mHomePage"
                android:background="@drawable/color_button_gradient"
                android:text="Youtube Videos"
                android:textAllCaps="false"
                android:textColor="#fff"/>


        <Button
                android:id="@+id/mPrivacyPolicy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="20dp"
                android:layout_below="@+id/mYoutube"
                android:layout_marginTop="10dp"
                android:background="@drawable/color_button_gradient"
                android:text="Privacy Policy"
                android:textAllCaps="false"
                android:textColor="#fff"/>

        <!--<Button
                android:id="@+id/mRateNow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:padding="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/mPrivacyPolicy"
                android:layout_marginTop="10dp"
                android:background="@drawable/color_button_gradient"
                android:text="Rate Now"
                android:textAllCaps="false"
                android:textColor="#fff"/>
-->

        <Button
                android:id="@+id/mShareNow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:padding="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/mPrivacyPolicy"
                android:layout_marginTop="10dp"
                android:background="@drawable/color_button_gradient"
                android:text="Share Now"
                android:textAllCaps="false"
                android:textColor="#fff"/>


        <TextView
                android:id="@+id/mRateAppText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How do you rate our app ?"
                android:layout_below="@+id/mShareNow"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="center_horizontal"/>

        <RatingBar
                android:id="@+id/rateApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_below="@+id/mRateAppText"
                android:numStars="5"
                android:rating="3.5"/>


    </RelativeLayout>


</ScrollView>